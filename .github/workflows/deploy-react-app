name: React App Deployment

on:
  push:
    branches:
      - deploy-react-app # Trigger on changes to the deploy-react-app branch

jobs:
  deploy-react-to-gh-pages:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository content
      - name: Checkout
        uses: actions/checkout@v2

      # Set up Node.js environment
      - name: Setup Node.js environment
        uses: actions/setup-node@v2
        with:
          node-version: "22.13.0"

      # Install dependencies
      - name: Install dependencies
        run: npm ci
        working-directory: client

      # Build the React app
      - name: Build
        run: npm run build
        working-directory: client # Ensure it builds from the client directory

      # Deploy to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./client/dist # Deploy the build output
          force_orphan: true # Force creation of a new gh-pages branch
